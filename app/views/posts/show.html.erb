<div id="page_wrapper">

<div class="top_nav">
		<ul>
				<li class="blog">

				<%= link_to "blog", posts_path %>
				
				</li>
				<li class="work"><%= link_to "work", work_path %></li>
				<li class="music"><%= link_to "music", music_path %></li>
				<li class="other"><%= link_to "other", other_path %></li>

		</ul>
</div>

=
<div id="post_content">

<%= image_tag @post.image.url(:medium) %>

<h1 class="title">	
	<%= @post.title %>
</h1>

<p class="date">
	Submitted <%= time_ago_in_words(@post.created_at) %> Ago
	<% if user_signed_in? %>
	| <%= link_to 'Edit', edit_post_path(@post) %>
	| <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?'}  %>
	<% end %>
</p>

<p class="body">
	<%= @post.body %>
</p>


<div id="comments">
	<h2><%= @post.comments.count %> Comments</h2>
	<%= render @post.comments %>

	<h3>Add a comment:</h3>
	<%= render "comments/form" %>
	</div>
</div>
</div>